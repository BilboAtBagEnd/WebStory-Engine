<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<ws>
    <settings>
        <stage width="640px" height="360px" id="Stage" create="yes" center="yes" />
        <autosave mode="line" />
    </settings>
    <assets>
        <asset name="tb_main" type="textbox" behaviour="adv" cssid="MainTb" names="yes"></asset>
        <asset name="tb_nvl" type="textbox" behaviour="nvl" cssid="NvlTb" names="no"></asset>
        <!-- autopause="true": Pause when the window is not focused. -->
        <asset name="music" type="audio" loop="true" fade="false" autopause="false">
            <track title="parity">
                <source href="../jife/work/audio/Parity.ogg" type="ogg" />
                <source href="../jife/work/audio/Parity.mp3" type="mp3" />
            </track>
            <track title="rain">
                <source href="audio/rainonverandaandthunder-2.mp3" type="mp3" />
                <source href="audio/rainonverandaandthunder-2.ogg" type="ogg" />
            </track>
            <track title="birds">
                <source href="audio/birds.mp3" type="mp3" />
                <source href="audio/birds.ogg" type="ogg" />
            </track>
        </asset>
        <asset name="sounds" type="audio" loop="false">
            <track title="bip">
                <source href="audio/bip.mp3" type="mp3" />
                <source href="audio/bip.ogg" type="ogg" />
            </track>
        </asset>
        <asset name="s" type="character" textbox="tb_main">
            <name>Sylvie</name>
        </asset>
        <asset name="me" type="character" textbox="tb_main">
            <name>Me</name>
        </asset>
        <asset name="n" type="character" textbox="tb_main"></asset>
        <asset name="img_sylvie" type="imagepack" x="200" y="20" z="5">
            <image src="img/sylvie_normal.png" name="normal" />
            <image src="img/sylvie_smile.png" name="smile" />
        </asset>
        <asset name="backgrounds" type="imagepack" x="0" y="0" z="0">
            <image src="img/106.jpg" name="bg106" />
            <image src="img/meadow.jpg" name="meadow" />
        </asset>
        <asset name="canvas" type="canvas"></asset>
        <asset name="rain" type="rain" canvas="canvas"></asset>
        <asset name="anim" type="animation">
            <group>
                <transform asset="img_sylvie" property="left" from="0" to="50" unit="px" duration="500" />
            </group>
            <group>
                <transform asset="img_sylvie" property="left" from="50" to="0" unit="px" duration="500" />
            </group>
        </asset>
    </assets>
    <scenes>
        <scene id="start">
            <do asset="music" action="set" track="rain" />
            <do asset="sounds" action="set" track="bip" />
            <do asset="music" action="play" />
            <goto scene="uni" />
        </scene>
        <scene id="uni">
            <do asset="backgrounds" action="set" image="bg106" />
            <do asset="backgrounds" action="show" duration="1000" />
            <wait />
            <do asset="tb_main" action="show" duration="200" effect="slide" direction="top" />
            <wait />
            <do asset="img_sylvie" action="set" image="normal" />
            <do asset="img_sylvie" action="show" duration="1000" />
            <wait />
<!--             <do asset="anim" action="start" /> -->
            <do asset="img_sylvie" action="move" x="20%" y="10%" />
            <wait />
            <line s="s">Oh hi, do we walk home together?</line>
            <do asset="sounds" action="play" />
            <do asset="tb_main" action="hide" effect="slide" direction="bottom" />
            <do asset="tb_nvl" action="show" duration="200" effect="slide" direction="top" />
            <do asset="s" action="setTextbox" textbox="tb_nvl" />
            <do asset="me" action="setTextbox" textbox="tb_nvl" />
            <do asset="n" action="setTextbox" textbox="tb_nvl" />
            <do asset="img_sylvie" action="set" image="smile" duration="400" />
            <line s="n">Yes, I said, and my voice was already shaking.</line>
            <line s="me">I don't know....</line>
            <do asset="img_sylvie" action="set" image="normal" duration="400" />
            <line s="me">Do you really want to?</line>
            <line s="me">I mean I'm... kinda an asshole.</line>
            <do asset="img_sylvie" action="hide" duration="1000" />
            <do asset="tb_nvl" action="hide" duration="1000" effect="slide" direction="bottom" />
            <wait />
            <do asset="backgrounds" action="hide" duration="1000" />
            <wait />
            <goto scene="meadow" />
        </scene>
        <scene id="meadow">
            <do asset="music" action="set" track="birds" />
            <do asset="tb_main" action="clear" />
            <do asset="tb_nvl" action="clear" />
            <do asset="backgrounds" action="set" image="meadow" duration="0" />
            <wait />
            <do asset="tb_nvl" action="show" duration="1000" effect="slide" direction="top" />
            <do asset="img_sylvie" action="show" duration="1000" />
            <do asset="backgrounds" action="show" duration="2000" />
            <line s="me">Woo, it's green here.</line>
<!--             <do asset="anim" action="stop" /> -->
            <line s="me">I hate it.</line>
            <do asset="tb_nvl" action="hide" duration="200" effect="slide" direction="bottom" />
            <do asset="tb_nvl" action="clear" />
            <wait />
            <do asset="tb_main" action="show" duration="200" effect="slide" direction="top" />
            <do asset="s" action="setTextbox" textbox="tb_main" />
            <do asset="me" action="setTextbox" textbox="tb_main" />
            <do asset="n" action="setTextbox" textbox="tb_main" />
            <wait />
            <line s="n">What to do?</line>
            <choice duration="500">
                <trigger event="click" asset="sounds" action="play" />
                <option scene="restart">Go kill myself.</option>
                <option scene="talk">Talk to Sylvie.</option>
            </choice>
        </scene>
        <scene id="talk">
            <line s="me">We need to talk.</line>
            <goto scene="restart" />
        </scene>
        <scene id="restart">
            <do asset="img_sylvie" action="hide" duration="1000" />
            <do asset="tb_main" action="hide" duration="1000" effect="slide" direction="bottom" />
            <wait />
            <do asset="backgrounds" action="hide" duration="1000" />
            <wait />
            <do asset="img_sylvie" action="set" image="smile" />
            <do asset="tb_main" action="clear" />
            <do asset="backgrounds" action="set" image="bg106" />
            <do asset="img_sylvie" action="move" x="0" y="0" />
            <do asset="music" action="stop" />
            <wait />
            <goto scene="start" />
        </scene>
    </scenes>
</ws>