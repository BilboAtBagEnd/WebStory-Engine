<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<ws>
    <settings>
        <stage width="640px" height="360px" id="Stage" create="yes" center="yes" />
        <autosave mode="line" />
    </settings>
    <assets>
        <asset name="tb_main" type="textbox" behaviour="adv" cssid="MainTb" names="no" 
            x="10px" y="250px" width="620px" height="100px"></asset>
        <asset name="tb_nvl" type="textbox" behaviour="nvl" cssid="NvlTb" names="no"></asset>
        <asset name="ambience" type="audio" loop="true" fade="false" autopause="false">
            <track title="birds">
                <source href="assets/audio/bird_sings_in_the_afternoon.mp3" type="mp3" />
                <source href="assets/audio/bird_sings_in_the_afternoon.ogg" type="ogg" />
            </track>
        </asset>
        <asset name="sounds" type="audio" loop="false" fade="false" autopause="false">
            <track title="bip">
                <source href="assets/audio/bip.mp3" type="mp3" />
                <source href="assets/audio/bip.ogg" type="ogg" />
            </track>
        </asset>
        <asset name="n" type="character" textbox="tb_main"></asset>
        <asset name="backgrounds" type="imagepack" x="0" y="0" z="0">
            <image src="assets/images/daytime_clouds_A_01.jpg" name="clouds01" />
            <image src="assets/images/Evening_clouds_C_01.jpg" name="clouds02" />
            <image src="assets/images/Rainbow_A_01.jpg" name="rainbow" />
        </asset>
        <asset name="anim" type="animation">
            <group>
                <do asset="sounds" action="set" track="bip" />
                <do asset="sounds" action="play" />
                <transform asset="backgrounds" property="left" from="0" to="-800" unit="px" duration="2000" easing="linear" />
            </group>
            <group>
                <do asset="sounds" action="play" />
                <transform asset="backgrounds" property="top" from="0" to="-600" unit="px" duration="2000" easing="linear" />
            </group>
            <group>
                <do asset="sounds" action="play" />
                <transform asset="backgrounds" property="left" from="-800" to="0" unit="px" duration="2000" easing="linear" />
            </group>
            <group>
                <do asset="sounds" action="play" />
                <transform asset="backgrounds" property="top" from="-600" to="0" unit="px" duration="2000" easing="linear" />
            </group>
        </asset>
    </assets>
    <scenes>
        <scene id="start">
            <do asset="backgrounds" action="set" image="clouds01" duration="0" />
            <do asset="ambience" action="set" track="birds" />
            <wait />
            <do asset="ambience" action="play" />
            <do asset="backgrounds" action="show" duration="500" />
            <do asset="tb_main" action="show" />
            <wait />
            <line s="n" stop="false">
                Welcome to the WebStory Engine demo!
            </line>
            <wait duration="2000" />
            <line s="n">
                To start, click on the screen or press [:b:]space[:/b:] / [:b:]right arrow[:/b:] key.
            </line>
            <do asset="anim" action="start" />
            <stop />
            <do asset="anim" action="stop" />
            <choice>
                <option scene="restart">Restart demo</option>
            </choice>
        </scene>
        <scene id="restart">
            <do asset="tb_main" action="hide" duration="1000" effect="slide" direction="bottom" />
            <wait />
            <do asset="backgrounds" action="hide" duration="1000" />
            <wait />
            <do asset="tb_main" action="clear" />
            <do asset="backgrounds" action="move" x="0" y="0" duration="0" />
            <do asset="ambience" action="stop" />
            <do asset="sounds" action="stop" />
            <wait />
            <goto scene="start" />
        </scene>
    </scenes>
</ws>